<% include ../partials/header %>
<div class = "container">
        <header class = "jumbotron">
            <div class = "container">
               <h1>This is campgrounds page</h1>
                <p>Tried to get some of the most famous camping location</p>
                <p>
                    <a class = "btn btn-primary btn-large" href="/campground/new">Add new Campground</a>
                </p>

            </div>
            </header>
            <div class = "row text-center" style = "display: flex ;flex-wrap: wrap;">
                    <% camp.forEach(function(camp){ %>
                        <div class = "col-md-3 col-sm-6" >
                            <div class = "thumbnail">
                                <img src= "<%= camp.img %>">
                                <div class = "caption">
                                    <h4> <%= camp.name %></h4>
                                </div>
                                <p>
                                    <a href="/campground/<%= campground._id %>" class = "btn btn-primary">More info</a>
                                </p>
                            </div>
                        </div>                            
                    <%});%>

        </div>
</div>

<% include ../partials/footer %>
